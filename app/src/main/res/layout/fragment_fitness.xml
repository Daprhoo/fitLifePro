<!-- fragment_fitness.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <!-- Fitness programını gösteren layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/layoutFitnessProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textFitnessday1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. gün"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textFitnessday1Exersices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egzersizler"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textFitnessday2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. gün"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textFitnessday2Exersices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egzersizler"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textFitnessday3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.gün"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textFitnessday3Exersices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egzersizler"
                android:textSize="16sp" />






        </LinearLayout>




    </ScrollView>


    <!-- Progress kaydetme butonu -->
    <Button
        android:id="@+id/buttonSaveProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Kaydet"
        android:layout_marginTop="@dimen/_8sdp"/>

</LinearLayout>
